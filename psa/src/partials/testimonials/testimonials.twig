        <div class="testimonials__list">
            {% for testimonial in testimonials %}
            <figure class="testimonials__figure {{ testimonial.active ? 'testimonials__figure--active' : '' }}">
                <figcaption class="testimonials__author">
                    <img src="{{ testimonial.image.src }}" alt="{{ testimonial.image.alt }}" />
                    <div>{{ testimonial.fullname }}</div>
                    <div>{{ testimonial.jobtitle }}</div>
                    <div>{{ testimonial.knownfor }}</div>
                </figcaption>
                <blockquote class="testimonials__blockquote">
                    "{{ testimonial.body }}"
                </blockquote>
            </figure>
            {% endfor %}
        </div>
    </div>
