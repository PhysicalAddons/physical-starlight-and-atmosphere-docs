<div class="testimonials">
    <div class="left-indent size-6">
        <h2 class="testimonials__title">Used by industry leaders on daily basis.</h2>
    </div>
    <div class="testimonials__links">
        {% for testimonial in testimonials %}
        <button
            class="testimonials__link"
            id="testimonial-link-{{ testimonial.id }}"
            aria-expanded="{{ testimonial.active }}"
            aria-controls="blockquote-{{ testimonial.id }}"
        >
            <img
                src="{{ testimonial.image.src }}"
                alt="{{ testimonial.image.alt }}"
            />
        </button>
        {% endfor %}
    </div>
    <div class="left-indent size-6">
        <div class="testimonials__list">
            {% for testimonial in testimonials %}
            <!-- visible only on mobile -->
            <img
                src="{{ testimonial.image.src }}"
                alt="{{ testimonial.image.alt }}"
            />
            <blockquote
                class="testimonials__blockquote"
                id="blockquote-{{ testimonial.id }}"
                aria-labelledby="testimonial-link-{{ testimonial.id }}"
                {{ testimonial.active ? '' : 'hidden' }}
            >
                "{{ testimonial.body }}"
                <cite>
                    <div>{{ testimonial.fullname }}</div>
                    <div>{{ testimonial.jobtitle }}</div>
                </cite>

            </blockquote>
            {% endfor %}
        </div>
    </div>
</div>
