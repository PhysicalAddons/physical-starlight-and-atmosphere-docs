{% set benefits = [
    {
        'active': true,
        'id': 'instant-photorealism',
        'title': 'Instant Photorealism',
        'description': 'Use our stunning premade presets or make your own. With one click all configuration will be applied.',
        'image': {
            'src':'/assets/images/earth.jpeg',
            'alt':'Instant Photorealism'
        }
    },
    {
        'active': false,
        'id': 'premade-atmospheres',
        'title': 'Premade atmospheres',
        'description': 'Presets allow to store a snapshot of your customized atmosphere settings and return to it later or use already predefined presets provided by the addon.',
        'image': {
            'src':'/assets/images/mars.jpeg',
            'alt':'Premade atmospheres'
        }
    },
    {
        'active': false,
        'id': 'save-time',
        'title': 'Save time',
        'description': 'This addon saves the time that usually is invested in manually creating sky, atmosphere and placing sun object and stars, and automates it within a single click.',
        'image': {
            'src':'/assets/images/nishita.jpeg',
            'alt':'Save time'
        }
    },
    {
        'active': false,
        'id': 'real-physics',
        'title': 'Based on a real physics',
        'description': 'We use a procedural method of calculating the atmosphere based on many tweakable parameters, so that sky color is not limited only to the Earth\'s atmosphere.',
        'image': {
            'src':'/assets/images/model.jpeg',
            'alt':'Real Physics'
        }
    },
    {
        'active': false,
        'id': 'any-weather-and-time',
        'title': 'Any weather and time',
        'description': 'In combination with Blender Sun Position addon, simulate any weather at any time.',
        'image': {
            'src':'/assets/images/model.jpeg',
            'alt':'Any weather and time'
        }
    }
] %}


<div class="container-s">
    <div class="benefits">
        <div class="benefits__list">
            {% for benefit in benefits %}
            <a
                href="javascript:void(0)"
                class="benefits__header"
                id="benefit-header-{{ benefit.id }}"
                aria-expanded="{{ benefit.active }}"
                aria-controls="benefit-panel-{{ benefit.id }}"
            >
                <h3>{{ benefit.title }}</h3>
                <p>{{ benefit.description }}</p>
            </a>
            <section
                    class="benefits__panel"
                    id="benefit-panel-{{ benefit.id }}"
                    aria-labelledby="benefit-header-{{ benefit.id }}"
                    {{ benefit.active ? '' : 'hidden' }}
            >
                <img
                        src="{{ benefit.image.src }}"
                        alt="{{ benefit.image.alt }}"
                />
            </section>
            {% endfor %}
        </div>
        <a href="#" class="benefits__cta btn btn--primary">Explore plans</a>

    </div>
</div>
